<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorPmSend" />
            <gradient android:angle="-90" android:startColor="#004D40" android:endColor="#689F38"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#43A047" />
            <solid android:color="#1B5E20"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorPmSend" />
            <gradient android:angle="-90" android:startColor="#1B5E20" android:endColor="#689F38" />
        </shape>
    </item>
</selector>